<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper 
PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" 
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<!-- sql 설정 : sql문, 반환 타입, 파라미터 설정 -->
<mapper namespace="com.aia.it.planner.dao.PlannerDaoInterface">

	<insert id="insertPlanner"
		parameterType="com.aia.it.planner.model.Planner" useGeneratedKeys="true"
		keyProperty="pidx">


	<![CDATA[      
		INSERT INTO planit.planner ( ptitle, pstartdate, penddate, uidx
		)
		VALUES (#{ptitle},#{pstartdate},#{penddate},#{uidx})
		
		]]>

	</insert>
	
	<delete id="deletePlannerByIdx"
		parameterType="com.aia.it.planner.model.Planner"
	>
		delete from planit.planner where pidx=#{pidx}
	</delete>	
	
	
	
	<update id="editPlanner"
		parameterType="com.aia.it.planner.model.Planner"
	>
		update planit.planner set ( ptitle, pstartdate, penddate, uidx
		)
		= (#{ptitle},#{pstartdate},#{penddate},#{uidx}) where pidx=#{pidx}
	
	</update>
	
	<select id="selectList"
	parameterType="com.aia.it.planner.model.Planner"
	>
	
	select * from plnit.planner
	
	
	
	</select>





</mapper>